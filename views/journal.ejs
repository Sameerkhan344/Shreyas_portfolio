							var caseSes =document.getElementsByClassName('case')
							for(let i=0 ; i< caseSes.length ;i++){
								var flag =1;
								if(flag===1){
										caseSes[i].style.opacity=".5"
										caseSes[i].style.filter='grayscale(1)'
										study3.style.opacity=".5"
										study3.style.filter='grayscale(1)'
										flag=0;
								}
								else{
										caseSes[i].style.opacity="1"
										caseSes[i].style.filter='grayscale(0)'
										study3.style.opacity="1"
										study3.style.filter='grayscale(0)'
										flag=1;
									}
								}
						elements.style.opacity="1"
						elements.style.filter='grayscale(0)'
						elements.style.width = '36.1vw';
					});
