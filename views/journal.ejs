			function caseStudy() {
				const caseStuddy = document.querySelector('.case-study');
				gsap.set('.cursor', { xPercent: -20, yPercent: -450 });
				let cursor = document.querySelector('.cursor');
				let view = document.querySelector('.view');
				// let caseS =document.querySelector('.case');
				let mouseX;
				let mouseY;
				window.addEventListener('mousemove', e => {
					mouseX = e.clientX;
					mouseY = e.clientY;
					gsap.to(cursor, 0.3, { x: mouseX, y: mouseY });
				});
				caseStuddy.addEventListener('mouseenter', () => {
					cursor.style.display = 'none';
					gsap.to(view, 0.1, {
						display: 'flex',
						scale: 1,
						opacity: 1,
						top: '-40px',
						left: '-40px',
						ease: 'slow(0.7, 0.7, false)',
					});
				});
				caseStuddy.addEventListener('mousemove', () => {
					gsap.to(view, 0.4, {
						x: mouseX,
						y: mouseY,
					});
				});
				caseStuddy.addEventListener('mouseleave', () => {
					cursor.style.display = 'none';
					gsap.to(view, 0.1, {
						scale: 0,
						top: '-40px',
						left: '-40px',
						opacity: 0,
						display: 'none',
					});
				});
			}
