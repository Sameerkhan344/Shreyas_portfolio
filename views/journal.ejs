			function journalHover() {
				var caseAll = document.getElementsByClassName('case');
				Array.from(caseAll).forEach(elements => {
					// console.log(elements);
					const cursor =document.querySelector(".cursor")
					const study3 = document.getElementById('study3');
					elements.addEventListener('mouseenter', function () {
