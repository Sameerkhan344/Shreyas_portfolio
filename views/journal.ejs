		<script>
			function cursorFollow() {
				const viewBox = document.getElementsByClassName('view-circ');
				const comingBox = document.getElementsByClassName('coming-circ');
				const viewText = document.getElementById('view');
				const comingText = document.getElementById('coming');
				const circle = document.getElementById('circle');

				// ---------For showing VIEW cursor inside BLogs---
				Array.from(viewBox).forEach(elements => {
					elements.addEventListener('mouseenter', event => {
						viewText.style.display = 'flex';
						comingText.style.display = 'none';
						circle.style.height = '140px';
						circle.style.width = '140px';
					});
					elements.addEventListener('mouseout', event => {
						viewText.style.display = 'none';
						comingText.style.display = 'none';
						circle.style.height = '12px';
						circle.style.width = '12px';
					});
				});
				// ---------For showing COMING SOON cursor inside BLogs---
				Array.from(comingBox).forEach(elements => {
					elements.addEventListener('mouseenter', event => {
						viewText.style.display = 'none';
						comingText.style.display = 'flex';
						circle.style.height = '140px';
						circle.style.width = '140px';
					});
					elements.addEventListener('mouseout', event => {
						viewText.style.display = 'none';
						comingText.style.display = 'none';
						circle.style.height = '12px';
						circle.style.width = '12px';
					});
				});
			}
			cursorFollow();
			function mouseMove() {
				const circle = document.getElementById('circle');
				document.addEventListener('mousemove', function (e) {
					var x = e.clientX;
					var y = e.clientY;
					circle.style.left = x + 'px';
					circle.style.top = y + 'px';
				});
			}
			mouseMove();
			function blogAnimation() {
				const boxAll = document.querySelectorAll('.box');
				const blogAll = document.querySelectorAll('.blog');

				// -----This is for all boxes Sizing ,EVEN ODD----
				Array.from(boxAll).forEach(elements => {
					elements.addEventListener('mouseenter', () => {
						var odd = document.querySelectorAll('.blog:nth-child(odd) .box');
						var even = document.querySelectorAll('.blog:nth-child(even) .box');
						for (let j = 0; j < odd.length; j++) {
							odd[j].style.width = '325px';
						}
						for (let k = 0; k < even.length; k++) {
							even[k].style.width = '325px';
						}
					elements.style.width = '520px';
					});
					elements.addEventListener('mouseout', function () {
						var odd = document.querySelectorAll('.blog:nth-child(odd) .box');
						var even = document.querySelectorAll('.blog:nth-child(even) .box');
						for (let j = 0; j < odd.length; j++) {
							odd[j].style.width = '440px';
						}
						for (let k = 0; k < even.length; k++) {
							even[k].style.width = '325px';
						}
					});
				});

				// ----------This is for all blog Black & White----
				Array.from(blogAll).forEach(elements => {
					elements.addEventListener('mouseenter', () => {
						var blog = document.querySelectorAll('.blog');
						for (let i = 0; i < blog.length; i++) {
							blog[i].style.opacity = '.2';
							blog[i].style.filter = 'grayscale(.4)';
						}
						elements.style.opacity = '1';
						elements.style.filter = 'grayscale(0)';
					});
					elements.addEventListener('mouseout', () => {
						var blog = document.querySelectorAll('.blog');
						for (let i = 0; i < blog.length; i++) {
							blog[i].style.opacity = '1';
							blog[i].style.filter = 'grayscale(0)';
						}
					});
				});
			}
			blogAnimation();
